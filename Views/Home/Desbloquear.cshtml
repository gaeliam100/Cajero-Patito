
@{
    ViewData["Title"] = "Desbloquear";
}
@{ 
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/EstilosMenús.css">
    <title>Menú principal - EasyBook</title>
</head>

<div id="sidebar" class="sidebar">
    <a href="#" class="boton-cerrar" onclick="ocultar()">X</a>
    <ul class="menu">
        <img src="~/Imagenesproyecto/imagen1.png" alt="IMG">
        <li><a href="/Home/PerfilBiblio">Mis Datos</a></li>
        <li><a href="/Home/Bloquear">Usuarios con prestamos vencidos/Bloquear</a></li>
        <li><a href="/Home/Desbloquear">Desbloquear Usuario</a></li>
         <li><a href="/Home/SeleccionarFicha">Mostrar fichas de usuarios</a></li>
        <li><a href="/Home/RegistrarLibro">Agregar libro</a></li>
        <li><a href="/Home/Aprobarprestamo">Aprobar préstamo</a></li>
        <li><a href="/Home/Entregar">Marcar prestamo como entregado</a></li>
        <li><a href="/Home/Conversacion">Chat</a></li>
        <br>
        <br>
        <li><a asp-action="SingOut2">Cerrar sesión</a></li>
    </ul>

</div>

<div id="contenido">
    <a id="abrir" class="abrir-cerrar" href="javascript:void(0)" onclick="mostrar()"><button id="abrir">Abrir menú</button></a>
    <a id="cerrar" class="abrir-cerrar" href="#" onclick="ocultar()"></a>
</div>



<body style="background-color:darkcyan; padding:25px">
    <div class="row mt-3">
        <div class="row mt-3">
            @foreach (proyecto_aula.Models.Usuario O in ViewBag._Usuarios)
            {
                <div class="col-6 mb-6 text-center img-div" style="border:solid">
                    <div class="col-10" >
                        
                        <a data-lightbox="roadtrip">
                            <img src="~/Perfil/@O.Imagenp" class="img-fluid img_ga img-box" data-lightbox="roadtrip" style="max-height: 250px;" />
                        </a>
                        <div>
                            <h6>Nombre completo del alumno</h6>
                            <p>@O.Nombre  @O.ApellidoP  @O.ApellidoM</p>
                            <h6>Correo electronico del prestamo</h6>
                            <p>@O.Correo</p>
                            <h6>Fecha de creación de la cuenta</h6>
                            <p>@O.FechaAlta</p>
                            <label></label>
                            <p>@O.FechaUltimaActualizacion</p>
                            <h6>ID de usuario</h6>
                            <p>@O.UsuarioID</p>
                            <h6>Estado de la cuenta</h6>
                            <p> @O.Estado</p>

                            @if (O.Estado == false)
                            {
                                <form asp-action="Desbloquear" method="post">
                                    <label>Usuario que sera desbloqueado</label>
                                    <input type="text" name="UsuarioID" value="@O.UsuarioID" readonly />
                                    <button>Desbloquear Usuario</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
    <!----------------------------[Sección de scripts para el funcionamiento del menú lateral]------------------------------------->
<script>
    function mostrar() {
        document.getElementById("sidebar").style.width = "300px";
        document.getElementById("contenido").style.marginLeft = "300px";
        document.getElementById("abrir").style.display = "none";
        document.getElementById("cerrar").style.display = "inline";
    }

    function ocultar() {
        document.getElementById("sidebar").style.width = "0";
        document.getElementById("contenido").style.marginLeft = "0";
        document.getElementById("abrir").style.display = "inline";
        document.getElementById("cerrar").style.display = "none";
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

