<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Estilos.css">
    <title>Iniciar sesión - EasyBook</title>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <!--Código del carrusel-->
            <div class="container-carrusel">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <a href="">
                                <img src="~/Imagenesproyecto/EasyBookNombre.jpeg" class="d-block w-100">
                            </a>
                        </div>
                        <div class="carousel-item">
                            <a href="/Home/LoginBiblio">
                                <img src="~/Imagenesproyecto/LoginBib.jpeg" class="d-block w-100">
                            </a>
                        </div>
                        <div class="carousel-item">
                            <a href="https://www.amoarubi.com">
                                <img src="~/Imagenesproyecto/LogosNombres.jpeg" class="d-block w-100">
                            </a>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Imagenesproyecto/EasyBookLogo.jfif" alt="IMG">
                </div>

                <form class="login100-form" asp-action="Login" method="post">
                    <div class="TituloLogin">
                        Inicio de sesión de Usuarios
                    </div>
                    <div class="wrap-input100">
                        <input class="input100" type="text" name="boleta" placeholder="Número de boleta">
                    </div>

                    <input class="input100" type="password" name="pass" placeholder="Contraseña">
                    @if (ViewBag.Error)
                    {
                        <div class="alert alert-warning" role="alert">
                            Usuario y/o contraseña incorrecta
                        </div>
                    }

                    @if (ViewBag.Completo)
                    {
                        <div class="alert alert-success" role="alert">
                            Tienes acceso
                        </div>
                    }
                    <div class="container-login100-form-btn">

                        <button class="login100-form-btn" type="submit">
                            Ingresar
                        </button>
                    </div>


                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Home/RegistrarUsuario">
                            Registrate!
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>



</body>
