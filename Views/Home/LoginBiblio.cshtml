
@{
    ViewData["Title"] = "LoginBiblio";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Estilos.css">
    <title>Iniciar sesión Bibliotecarios - EasyBook</title>
</head>
<body>
  <br><br>
   <div class="wrap-login100" style="flex:none; width:83%; margin-right:auto; margin-left:auto;">
          <div class="login100-pic js-tilt" data-tilt >
            <img src="~/Imagenesproyecto/EasyBookLogo.jfif" alt="IMG" style="flex:none;">
          </div>

          <form class="login100-form" asp-action="LoginBiblio" method="post">
              <div class="TituloLogin">
                  Inicio de sesión de Bibliotecarios
              </div>
              <div class="wrap-input100">
                  <input class="input100" type="text" name="Correo" placeholder="Número de boleta">
              </div>

              <input class="input100" type="password" name="password" placeholder="Contraseña">
              @if (ViewBag.Error)
              {
                  <div class="alert alert-warning" role="alert">
                      Usuario y/o contraseña incorrecta
                  </div>
              }

              @if (ViewBag.Completo)
              {
                  <div class="alert alert-success" role="alert">
                      Tienes acceso
                  </div>
              }

              <div class="container-login100-form-btn">

                  <button class="login100-form-btn" type="submit">
                      Ingresar
                  </button>
              </div>


              <div class="text-center p-t-136">
                  <a class="txt2" href="/Home/registrar">
                      Registrate!
                      <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                  </a>
              </div>
              <div class="text-center p-t-14">
                  <a class="txt2" href="/Home/Login">
                      Regresar al inicio de sesión de Usuario
                  </a>
              </div>
          </form>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>