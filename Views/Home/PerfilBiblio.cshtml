</div>

<div>
    <iframe src="/Home/Conversacion" style="width:700px;height:380px;margin-left:40%">
    </iframe>
</div>

 <div class="limiter">
        <div class="container" id="Fondo" style="width:70%; margin-left:auto; margin-right:auto;">
          <h1>Mis Datos </h1>
          <br><br><br>
          <div class="row">
            <div class="col">
              <a><img src="~/ImagenPB/@ViewBag._Bibliotecario.Imagenp" class="img-thumbnail" style="border: solid; border-color: darkcyan; width: 200px; height: 200px; padding: 0px;" /></a>
                <form asp-action="CambiarIm2" method="post" enctype="multipart/form-data">
                    <input name="Imagen" type="file" accept="image/*" required />
                    <button type="submit">Cambiar Mi Imagen de perfil</button>
                </form>
            </div>
              
            <h6>Nombre</h6>
            <input type="text" readonly value="@ViewBag._Bibliotecario.Nombre" />
            <br />
            <h6>Apellidos</h6>
            <input type="text" readonly value="@ViewBag._Bibliotecario.ApellidoP" />
            <br />
            <input type="text" readonly value="@ViewBag._Bibliotecario.ApellidoM" />
            <br />
            <h6>Antiguedad</h6>
            <input type="text" readonly value="@ViewBag._Bibliotecario.FechaAlta" />
            <br />
            <h6>Número de empleado</h6>
            <input type="text" readonly value="@ViewBag._Bibliotecario.BiblioID" />
        </div>
      </div>
    </div>


<!----------------------------[Sección de scripts para el funcionamiento del menú lateral]------------------------------------->
<script>
    function mostrar() {
        document.getElementById("sidebar").style.width = "300px";
        document.getElementById("contenido").style.marginLeft = "300px";
        document.getElementById("abrir").style.display = "none";
        document.getElementById("cerrar").style.display = "inline";
    }

    function ocultar() {
        document.getElementById("sidebar").style.width = "0";
        document.getElementById("contenido").style.marginLeft = "0";
        document.getElementById("abrir").style.display = "inline";
        document.getElementById("cerrar").style.display = "none";
    }
</script>
