<div class="limiter">
        <div class="container" id="Fondo">
            <h1>Solicitar prestamo</h1>

            <form method="get" asp-action="Solicitarprestamo">
                <div class="row">
                    <div class="col-10">
                        <div class="form-group">
                            <input type="text" class="form-control" id="Criterio" name="opcion" placeholder="Buscar Libro" />
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <button type="submit" class="btnBuscar" style="width=10%; height=10%;">Buscar</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    @if (ViewBag.Busqueda != null)
                    {
                        @if (ViewBag.Busqueda.Count == 0)
                        {
                            <div class="alert alert-primary" role="alert">
                                Sin resultados
                            </div>
                        }
                        else
                        {
                            <h4>Resultados de la busqueda:</h4>
                            @foreach (proyecto_aula.Models.Libro coin in ViewBag.Busqueda)
                            {
                                <input name="Numerodeboleta" type="text" value="@ViewBag._Usuario.UsuarioID" readonly />
                                <form asp-action="Solicitarprestamo" method="post">
                                    <input name="Numerodeboleta" type="text" value="@ViewBag._Usuario.UsuarioID" readonly />
                                    <div class="card mb-2">
                                        <div class="card-body">
                                            <div class="row">
            
                                                <div class="col-md-9">
                                                    <h6>ID de Libro</h6>
                                                    <input type="text" name="idLibro" value="@coin.LibroID" />
                                                    <h5 class="card-title">Nombre del Libro</h5>
                                                    <input name="NombLib" type="text" readonly value="@coin.NomLib" />
                                                    <p class="card-text">Numero de paginas</p>
                                                    <input type="text" readonly value="@coin.NomAut" />
                                                    <br>
                                                    <button type="submit" id="btnRealizar">Realizar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            }
                        }
                    }
                </div>
            </div>
          </div>
        </div>




<body>
    <!-------------------------------------------------[Menú desplegable]-------------------------------------------------------------------------->
    
    <!----------------------------[Sección de scripts para el funcionamiento del menú lateral]------------------------------------->
    <script>
    function mostrar() {
        document.getElementById("sidebar").style.width = "300px";
        document.getElementById("contenido").style.marginLeft = "300px";
        document.getElementById("abrir").style.display = "none";
        document.getElementById("cerrar").style.display = "inline";
    }
    
    function ocultar() {
        document.getElementById("sidebar").style.width = "0";
        document.getElementById("contenido").style.marginLeft = "0";
        document.getElementById("abrir").style.display = "inline";
        document.getElementById("cerrar").style.display = "none";
    }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>