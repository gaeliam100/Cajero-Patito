@model proyecto_aula.Models.Bibliotecario
@{
    ViewData["Title"] = "registrar";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Estilos.css">
    <title>Registro de Bibliotecario - EasyBook</title>
</head>
<body>
    <br><br><br>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-picregistro" data-tilt>
                    <img src="~/Imagenesproyecto/imagen1.png" alt="IMG">
                </div>
                @if (ViewBag.Error)
                {
                    <div class="alert alert-warning" role="alert">
                        El Usuario se encuentra registrado,asegurate
                        de que sean tus datos
                    </div>
                }

                @if (ViewBag.Completo)
                {
                    <div class="alert alert-success" role="alert">
                        Muy bien, Usuario registrado correctamente
                    </div>
                }
                <form asp-action="registrar" method="post" class="login100-form validate-form" onsubmit="return validar()">
                    <div class="wrap-input100">
                        <div class="TituloLogin">
                            Registro de Bibliotecarios
                        </div>
                        <h3 class="InfoSolicitada">ID Empleado:</h3><input class="input100" type="number" asp-for="BiblioID" placeholder="Ingresa tu número de empleado único">

                        <h3 class="InfoSolicitada">Correo:</h3><input class="input100" type="text" asp-for="Correo" placeholder="Ej: gaeliam740@gmail.com">

                        <h3 class="InfoSolicitada">Contraseña:</h3><input class="input100" id="Password" type="password" asp-for="Password" placeholder="Ingresa una contraseña">

                        <h3 class="InfoSolicitada">Confirmar contraseña:</h3><input class="input100" name="RepetirPassword" id="RepetirPassword" type="password" placeholder="Confirma contraseña">

                        <h3 class="InfoSolicitada">Nombre(s):</h3><input class="input100" type="text" asp-for="Nombre" placeholder="Introduce tu(s) nombre(s)">

                        <h3 class="InfoSolicitada">Apellido Paterno:</h3><input class="input100" type="text" asp-for="ApellidoP" placeholder="Introduce tu apellido paterno">

                        <h3 class="InfoSolicitada">Apellido Materno:</h3><input class="input100" type="text" asp-for="ApellidoM" placeholder="Introduce tu apellido materno">

                        <h3 class="InfoSolicitada">Edad:</h3><input class="input100" type="number" asp-for="Edad" placeholder="Introduce tu edad">

                        <h3 class="InfoSolicitada">Sexo:</h3><select asp-for="Sexo" id="Ivansexo">
                            <option value="1">Masculino</option>
                            <option value="2">Femenino</option>
                        </select>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Registrar
                        </button>
                    </div>
                    <div class="text-center p-t-14">
                        <a class="txt2" href="/Home/LoginBiblio">
                            Regresar al inicio de sesión de Bibliotecarios
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <script type="text/javascript">
        function validar() {
            pasword = document.getElementById('Password');
            repetir = document.getElementById('RepetirPassword');
            if (pasword.value != repetir.value) {
                alert("Las contraseñas no coinciden");
                return false;
            }
            else {
                return true;
            }
        }
    </script>

</body>
</html>





































